<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multi_answers_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/multi_answers_question_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="Question 1: Which descriptions are right about this picture?" />

    <ImageView
        android:id="@+id/multi_answers_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_launcher" />

    <CheckBox
        android:id="@+id/checkbox_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:paddingLeft="10dp"
        android:text="@string/this_is_a_answer" />

    <CheckBox
        android:id="@+id/checkbox_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:paddingLeft="10dp"
        android:text="@string/this_is_a_answer" />

    <CheckBox
        android:id="@+id/checkbox_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:paddingLeft="10dp"
        android:text="@string/this_is_a_answer" />

    <CheckBox
        android:id="@+id/checkbox_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:paddingLeft="10dp"
        android:text="@string/this_is_a_answer" />

    <Button
        android:id="@+id/multi_answers_hint_button"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/hint"
        android:textSize="12sp" />

</LinearLayout>